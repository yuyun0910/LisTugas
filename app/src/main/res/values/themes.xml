<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LisTugas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/black_title</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_100</item>
        <item name="colorSecondaryVariant">@color/yellow_100</item>
        <item name="colorOnSecondary">@color/white</item>
        <!--text color-->
        <item name="android:textColor">@color/black_title</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="L">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="navTheme">
        <item name="android:background">"@null"</item>
    </style>

    <style name="btnTheme">
        <item name="android:background">@drawable/buttons_addtask0</item>
    </style>

    <style name="listTaskTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="btnSettingList">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.LisTugas">
        <item name="colorAccent">@color/yellow_100</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:weekNumberColor">@color/purple</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/yellow_100</item>
    </style>

    <style name="CalenderViewUnfocusedMonthDateColor" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black_title</item>
    </style>

    <style name="Theme.LisTugasRed" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/black_title</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_100</item>
        <item name="colorSecondaryVariant">@color/yellow_100</item>
        <item name="colorOnSecondary">@color/white</item>
        <!--text color-->
        <item name="android:textColor">@color/black_title</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="L">true</item>
        <!-- Customize your theme here. -->
    </style>
</resources>